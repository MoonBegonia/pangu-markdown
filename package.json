{
	"name": "Pangu-Markdown",
	"displayName": "Pangu-Markdown",
	"description": "Pangu format for markdown",
	"version": "0.0.5",
	"publisher": "xlthu",
	"engines": {
		"vscode": "^1.11.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xlthu/pangu-markdown"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension",
	"contributes": {
		"commands": [
			{
				"command": "pangu.format",
				"title": "Pangu Format"
			}
		],
		"menus": {
			"editor/context": [{
				"when": "resourceLangId == markdown",
				"command": "pangu.format",
				"group": "1_modification"
			}]
		},
		"configuration": {
			"type": "object",
			"title": "Pangu Configuration",
			"properties": {
				"pangu.auto_format_on_save": {
					"type": "boolean",
					"default": false,
					"description": "Auto apply Pangu format on save"
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.0.3",
		"vscode": "^1.0.0",
		"mocha": "^2.3.3",
		"@types/node": "^6.0.40",
		"@types/mocha": "^2.2.32"
	}
}